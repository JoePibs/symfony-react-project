{% extends 'admin/admin.html.twig' %}

{% block title %}Listes des recettes! âœ…{% endblock %}

{% block body %}
    <style>
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Listes des recettes! </h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            {% for category in categories %}
                <tbody>
                    <tr>
                        <th scope="row">{{category.id}}</th>
                        <td>{{category.name}}</td>
                        <td>
                            <form action="{{ path('admin.category.remove', {'id': category.id}) }}" method="post"> 
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <input type="hidden" name="_method" value="DELETE">
                            </form>
                    </td>
                        <td><a class="btn btn-secondary" href="{{ path('admin.category.edit', {'id': category.id}) }}"> Edit</a></td>
                    </tr>
                </tbody>
            {% endfor %}
        </table>
        <a class="btn btn-primary" href="{{ path('admin.category.create') }}">Nouvelle Categorie</a>
        
    </div>
{% endblock %}

