{% extends 'admin/admin.html.twig' %}

{% block title %}Listes des recettes! âœ…{% endblock %}

{% block body %}
    <style>
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Listes des recettes! </h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Categorie</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            {% for recipe in recipes %}
                <tbody>
                    <tr>
                        <th scope="row">{{recipe.id}}</th>
                        <td>{{recipe.title}}</td>
                        <td>{{recipe.category.name | default('') }}</td>
                        <td>
                            <form action="{{ path('admin.recipe.delete', {'id': recipe.id}) }}" method="post"> 
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <input type="hidden" name="_method" value="DELETE">
                            </form>
                    </td>
                        <td><a class="btn btn-secondary" href="{{ path('admin.recipe.edit', {'id': recipe.id}) }}"> Edit</a></td>
                    </tr>
                </tbody>
            {% endfor %}
        </table>
        {{knp_pagination_render(recipes)}}
        <a class="btn btn-primary" href="{{ path('admin.recipe.create') }}">Nouvelle recette</a>
        
    </div>
{% endblock %}

